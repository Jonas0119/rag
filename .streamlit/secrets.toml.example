# Streamlit Cloud Secrets 配置模板
# 
# 使用方法：
# 1. 在 Streamlit Cloud Dashboard 中，进入你的应用
# 2. 点击 "Settings" -> "Secrets"
# 3. 将以下内容复制到 Secrets 编辑器中（去掉注释）
# 4. 替换所有占位符（your_xxx）为实际值
#
# 注意：不要将包含真实密钥的文件提交到 Git！

# ==================== API 配置 ====================
ANTHROPIC_API_KEY = "sk-your_minimax_api_key_here"
ANTHROPIC_BASE_URL = "https://api.minimaxi.com/anthropic"

# ==================== 存储模式切换 ====================
# 在 Streamlit Cloud 上必须全部设置为 "cloud"
STORAGE_MODE = "cloud"
VECTOR_DB_MODE = "cloud"
DATABASE_MODE = "cloud"

# ==================== Supabase 配置 ====================
SUPABASE_URL = "https://your-project-ref.supabase.co"
SUPABASE_KEY = "your_publishable_key"
SUPABASE_SERVICE_KEY = "your_service_key"
SUPABASE_STORAGE_BUCKET = "rag"

# ==================== Supabase PostgreSQL 配置 ====================
DATABASE_URL = "postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres"

# ==================== Pinecone 配置 ====================
PINECONE_API_KEY = "your_pinecone_api_key"
PINECONE_ENVIRONMENT = "us-east-1"
PINECONE_INDEX_NAME = "rag-system"

# ==================== 认证配置 ====================
AUTH_COOKIE_NAME = "rag_auth_token"
AUTH_COOKIE_KEY = "your_random_secret_key_here"  # 使用: python -c "import secrets; print(secrets.token_urlsafe(32))"
AUTH_COOKIE_EXPIRY_DAYS = "30"
MIN_PASSWORD_LENGTH = "6"

# ==================== 文件上传限制 ====================
MAX_FILE_SIZE = "20971520"  # 20MB

# ==================== RAG 配置（可选，使用默认值）====================
CHUNK_SIZE = "800"
CHUNK_OVERLAP = "100"
MIN_CHUNK_SIZE = "200"
MAX_CHUNK_SIZE = "1000"
RETRIEVAL_K = "3"
RETRIEVAL_SEARCH_TYPE = "similarity"
RAG_FALLBACK_ENABLED = "true"
RAG_SIMILARITY_THRESHOLD = "0.3"

# ==================== LLM 配置 ====================
LLM_MODEL = "MiniMax-M2"
LLM_TEMPERATURE = "0"
LLM_MAX_TOKENS = "2000"

# ==================== Embedding 配置 ====================
EMBEDDING_MODEL = "BAAI/bge-large-zh-v1.5"
EMBEDDING_DEVICE = "cpu"
NORMALIZE_EMBEDDINGS = "true"

